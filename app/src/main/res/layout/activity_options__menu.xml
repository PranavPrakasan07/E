<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#212121"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    tools:context=".Options_Menu">

    <Button
        android:id="@+id/apply_filter"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/input_cards"
        android:text="APPLY FILTER"
        android:textColor="#FFF"
        android:textSize="30sp"
        android:layout_margin="16dp"
        tools:layout_editor_absoluteX="183dp"
        tools:layout_editor_absoluteY="35dp" />

    <Button
        android:id="@+id/find_tutor"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="FIND TUTOR"
        android:background="@drawable/input_cards"
        android:textSize="30sp"
        android:textColor="#FFF"
        android:layout_below="@+id/apply_filter"
        android:layout_margin="16dp"
        tools:layout_editor_absoluteX="183dp"
        tools:layout_editor_absoluteY="35dp" />

    <Button
        android:id="@+id/create_user_profile"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="CREATE User PROFILE"
        android:background="@drawable/correct_data"
        android:textSize="30sp"
        android:textColor="#FFF"
        android:layout_below="@id/find_tutor"
        android:layout_margin="16dp"
        tools:layout_editor_absoluteX="183dp"
        tools:layout_editor_absoluteY="35dp" />

    <Button
        android:id="@+id/my_profile"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="MY PROFILE"
        android:background="@drawable/input_cards"
        android:textSize="30sp"
        android:textColor="#FFF"
        android:layout_below="@id/create_user_profile"
        android:layout_margin="16dp"
        tools:layout_editor_absoluteX="183dp"
        tools:layout_editor_absoluteY="35dp" />

    <Button
        android:id="@+id/find_video"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="FIND VIDEO"
        android:textColor="#FFF"
        android:background="@drawable/input_cards"
        android:textSize="30sp"
        android:layout_below="@id/my_profile"
        android:layout_margin="16dp"
        tools:layout_editor_absoluteX="183dp"
        tools:layout_editor_absoluteY="35dp" />

    <Button
        android:id="@+id/create_tutor_profile"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="Create Tutor Profile"
        android:background="@drawable/correct_data"
        android:textSize="30sp"
        android:textColor="#FFF"
        android:layout_below="@id/find_video"
        android:layout_margin="16dp"
        tools:layout_editor_absoluteX="183dp"
        tools:layout_editor_absoluteY="35dp" />
</RelativeLayout>
</ScrollView>