<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:id="@+id/tutor_background"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:text="@string/find_tutor"
        android:textSize="40sp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider2"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading" />

    <LinearLayout
        android:id="@+id/view_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2">

        <EditText
            android:id="@+id/tutor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/input_cards"
            android:ems="10"
            android:fontFamily="@font/montserrat_light"
            android:gravity="center_vertical|center_horizontal"
            android:hint="Enter Tutor Name"
            android:inputType="textPersonName"
            android:padding="4dp"
            android:textAlignment="gravity"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/or0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/tutor_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/input_cards"
            android:ems="10"
            android:fontFamily="@font/montserrat_light"
            android:gravity="center_vertical|center_horizontal"
            android:hint="Enter Tutor Email"
            android:inputType="textEmailAddress"
            android:padding="4dp"
            android:textAlignment="gravity"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/or1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/tutor_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/input_cards"
            android:ems="10"
            android:fontFamily="@font/montserrat_light"
            android:gravity="center_vertical|center_horizontal"
            android:hint="Tutor Contact Number"
            android:inputType="phone"
            android:padding="4dp"
            android:textAlignment="gravity"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/or2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/tutor_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/input_cards"
            android:ems="10"
            android:fontFamily="@font/montserrat_light"
            android:gravity="center_vertical|center_horizontal"
            android:hint="Enter Tutor ID"
            android:inputType="textPersonName"
            android:padding="4dp"
            android:textAlignment="gravity"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/or3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/montserrat_light"
            android:text="Tutors open to work"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <SeekBar
            android:id="@+id/seekBar3"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="64dp"
            android:max="1"
            android:progress="0" />

        <View
            android:id="@+id/divider3"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="1dp"
            android:background="?android:attr/listDivider" />

        <Button
            android:id="@+id/find_button_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginBottom="32dp"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/input_cards"
            android:text="Find" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollview"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2">

        <TextView
            android:id="@+id/results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result(s)"
            android:layout_gravity="center"
            android:textSize="18sp"/>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>