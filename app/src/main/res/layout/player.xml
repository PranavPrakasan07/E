<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    tools:context=".Player">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <VideoView
            android:id="@+id/videoView"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="250dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"/>
    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_below="@id/frameLayout">

        <LinearLayout
            android:background="#313131"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/playbutton"
                android:background="@drawable/correct_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_margin="8dp"
                android:text="Watch" />

            <LinearLayout
                android:background="#313131"
                android:layout_width="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/divider2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/starttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="gravity"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:textColor="#FFF"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:text="00:00" />

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_weight="4"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/endtime"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:textAlignment="gravity"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="00:00" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/controls"
        android:background="?android:attr/listDivider" />

    <Button
        android:visibility="visible"
        android:id="@+id/view_tutor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_cards"
        android:layout_margin="8dp"
        android:text="View Tutor Profile"
        android:textSize="18sp"
        android:textColor="#FFF"
        android:layout_below="@id/divider3"/>

    <Button
        android:visibility="visible"
        android:id="@+id/desc_appear_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_cards"
        android:layout_margin="8dp"
        android:text="View Description"
        android:textSize="18sp"
        android:textColor="#FFF"
        android:layout_below="@id/view_tutor"/>

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/desc_appear_button"
        android:background="?android:attr/listDivider" />

    <ScrollView
        android:visibility="visible"
        android:id="@+id/description_scroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_below="@id/divider4">

        <TextView
            android:id="@+id/video_description"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textAlignment="gravity"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:text="@string/dummy_description" />

    </ScrollView>


</RelativeLayout>